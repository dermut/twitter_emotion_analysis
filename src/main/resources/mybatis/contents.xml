  <insert id="create" parameterType="ContentsVO">
    INSERT INTO contents(name, content, views, replies, size, 
                         photo, thumb, rdate, boardno, memberno)  
    VALUES(#{name}, #{content}, #{views}, #{replies}, #{size},
           #{photo}, #{thumb}, now(), #{boardno}, #{memberno})
  </insert>
  
